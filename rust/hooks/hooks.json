{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit | Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/post-edit.sh \"$TOOL_RESULT\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/final-check.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
